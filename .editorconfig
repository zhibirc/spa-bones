# top-most config file
root = true

# common settings
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.xml]
indent_size = 2

[*.{json,webmanifest}]
indent_size = 2

[*.{cmd,bat}]
end_of_line = crlf
